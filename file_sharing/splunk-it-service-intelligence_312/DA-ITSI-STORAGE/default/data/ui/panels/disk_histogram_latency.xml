<panel>
  <title>Histogram for Disk Latency (ms)</title>
  <chart>
    <search>
      <query>| savedsearch DA-ITSI-STORAGE-Disk_Histogram_Chart_Latency_Search disk_id="$disk_id$"</query>
      <earliest>$earliest$</earliest>
      <latest>$latest$</latest>
    </search>
	<option name="charting.axisTitleX.visibility">visible</option>
	<option name="charting.axisTitleY.visibility">visible</option>
	<option name="charting.axisX.scale">linear</option>
	<option name="charting.axisY.scale">linear</option>
	<option name="charting.chart">column</option>
	<option name="charting.fieldColors">{"0-20":0x99D18B,"20-40":0x31A35F, "40-60":0xFFE98C, "60-80":0xFCB64E, "80-100":0xF26A35, "Higher":0xB50101}</option>
	<option name="charting.chart.bubbleSizeBy">area</option>
	<option name="charting.chart.nullValueMode">gaps</option>
	<option name="charting.chart.showDataLabels">none</option>
	<option name="charting.chart.stackMode">stacked</option>
	<option name="charting.legend.placement">top</option>
    <option name="refresh.time.visible">false</option>
	<drilldown>
		<condition field="Higher">
			<link target="blank">search?earliest=$earliest$&amp;latest=$latest$&amp;q=tag=disk tag=performance tag=storagesystem latency=* disk_id=$disk_id$ latency>=100</link>
		</condition>
		<condition>
			<link target="blank">search?earliest=$earliest$&amp;latest=$latest$&amp;q=tag=disk tag=performance tag=storagesystem latency=* disk_id=$disk_id$ | eval range=split("$click.name2$","-") | eval lowerlimit= mvindex(range,0) , upperlimit=mvindex(range,1) | where latency&gt;=lowerlimit AND latency&lt;upperlimit</link>
		</condition>
	</drilldown>
  </chart>
</panel>