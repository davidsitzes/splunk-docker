<panel>
  <chart>
    <title>Network Bandwidth Across All Interfaces (packets/sec)</title>
    <search>
      <query>
index=* host=$host$ tag=oshost tag=performance tag=network (packets_in=* OR packets_out=*) 
| timechart eval(round(sum(packets_in), 2)) as "Inbound (Packets/s)", eval(round(sum(packets_out), 2)) as "Outbound (Packets/s)"
      </query>
      <earliest>$earliest$</earliest>
      <latest>$latest$</latest>
    </search>
    <option name="charting.chart">area</option>
  <!--   <option name="charting.axisLabelsX.majorLabelVisibility">hide</option> -->
    <option name="charting.axisTitleX.visibility">collapsed</option>
    <option name="charting.chart.nullValueMode">connect</option>
    <option name="charting.chart.showDataLabels">none</option>
    <option name="charting.legend.placement">top</option>
    <option name="charting.chart.stackMode">stacked</option>
    <option name="refresh.time.visible">false</option>
  </chart>
</panel>
