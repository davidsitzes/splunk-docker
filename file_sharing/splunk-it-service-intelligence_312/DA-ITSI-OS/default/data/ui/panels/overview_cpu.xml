<panel>
  <chart>
    <title>CPU (%) &amp; Queue Length (count)</title>
    <search>
      <query>
index=* host=$host$ tag=oshost tag=performance tag=cpu (cpu_load_percent=* OR wait_threads_count=*) 
| timechart eval(round(avg(cpu_load_percent), 2)) as "CPU Usage (%)", eval(round(avg(wait_threads_count), 2)) as "Queue Length"
      </query>
      <earliest>$earliest$</earliest>
      <latest>$latest$</latest>
    </search>
    <option name="charting.chart">area</option>
   <!--  <option
        name="charting.axisLabelsX.majorLabelVisibility">hide</option> -->
    <option name="charting.axisTitleX.visibility">collapsed</option>
    <option name="charting.axisTitleY.visibility">collapsed</option>
    <option name="charting.axisY2.enabled">1</option>
    <option name="charting.chart.nullValueMode">connect</option>
    <option name="charting.chart.showDataLabels">none</option>
    <option name="charting.axisY.maximumNumber">100</option>
    <option name="charting.legend.placement">top</option>
    <option name="charting.chart.overlayFields">"Queue Length"</option>
    <option name="refresh.time.visible">false</option>
  </chart>
</panel>
