<panel>
  <chart>
    <title>Device Storage Operations (IO/sec)</title>
    <search>
      <query>
index=* host=$host$ tag=oshost tag=performance tag=storage (read_ops=* OR write_ops=* OR mount=*) 
| timechart eval(round(latest(read_ops), 2)) as "Read IO/s" eval(round(latest(write_ops), 2)) as "Write IO/s" by mount
      </query>
      <earliest>$earliest$</earliest>
      <latest>$latest$</latest>
    </search>
    <option name="charting.chart">area</option>
   <!--  <option
   name="charting.axisLabelsX.majorLabelVisibility">hide</option> -->
    <option name="charting.axisTitleX.visibility">collapsed</option>
    <option name="charting.chart.nullValueMode">connect</option>
    <option name="charting.chart.showDataLabels">none</option>
    <option name="charting.legend.placement">top</option>
    <option name="charting.chart.stackMode">default</option>
    <option name="charting.axisTitleX.visibility">collapsed</option>
    <option name="refresh.time.visible">false</option>
  </chart>
</panel>
